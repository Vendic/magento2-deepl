<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Aromicon_Deepl::translate" title="Aromicon Deepl Translate" translate="title" sortOrder="30">
                    <resource id="Aromicon_Deepl::translate_attribute" title="Translate Attributes" translate="title" sortOrder="10" />
                    <resource id="Aromicon_Deepl::translate_product" title="Translate Products" translate="title" sortOrder="20" />
                    <resource id="Aromicon_Deepl::translate_category" title="Translate Categories" translate="title" sortOrder="30" />
                    <resource id="Aromicon_Deepl::translate_block" title="Translate CMS Blocks" translate="title" sortOrder="40" />
                    <resource id="Aromicon_Deepl::translate_page" title="Translate CMS Pages" translate="title" sortOrder="50" />
                    <resource id="Aromicon_Deepl::translate_review" title="Translate Reviews" translate="title" sortOrder="60" />
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Aromicon_Deepl::config" title="Aromicon Deepl Configuration" translate="title" sortOrder="1000" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
